<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:layout_marginBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_poesia_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:lineSpacingExtra="8sp"
                android:text="菩萨蛮菩萨蛮菩萨蛮"
                android:textColor="@color/black_high"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <LinearLayout
                android:id="@+id/ll_yizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/draw_yizhu"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:text="译"
                    android:textColor="@color/color_yizhu_selector"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:id="@+id/tv_zhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/draw_yizhu"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:text="注"
                    android:textColor="@color/color_yizhu_selector"
                    android:textSize="10sp"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="0dp" />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_poesia_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="唐代：陶渊明"
            android:textColor="@color/black_min" />

        <com.raythinks.poesia.ui.widget.SelectableTextView
            android:id="@+id/tv_poesia_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:inputType="none"
            android:lineSpacingExtra="10sp"
            android:text="遑遑三十载，书剑两无成。山水寻吴越，风尘厌洛京。扁舟泛湖海，长揖谢公卿。且乐杯中物，谁论世上名。遑遑三十载，书剑两无成。山水寻吴越，风尘厌洛京。扁舟泛湖海，长揖谢公卿。且乐杯中物，谁论世上名。遑遑三十载，书剑两无成。山水寻吴越，风尘厌洛京。扁舟泛湖海，长揖谢公卿。且乐杯中物，谁论世上名。"
            android:textColor="@color/black_mid"
            android:textCursorDrawable="@null"
            android:textIsSelectable="true"
            android:textSize="14sp"
            app:forbiddenActionMenu="false"
            app:textJustify="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_star_border_black_24dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_volume_down_black_28dp" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                app:srcCompat="@drawable/ic_share_black_20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_poesia_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4sp"
            android:text="宋词三百首，豪放，爱国，壮志"
            android:textColor="@color/black_min"
            android:textSize="12sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>