<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_poesia_bref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:visibility="gone">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/draw_yizhu"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:text="译"
                    android:textColor="@color/color_yizhu_selector"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_zhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/draw_yizhu"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:text="注"
                    android:textColor="@color/color_yizhu_selector"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_shang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/draw_yizhu"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:text="赏"
                    android:textColor="@color/color_yizhu_selector"
                    android:textSize="10sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_poesia_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:inputType="none"
                android:lineSpacingExtra="10sp"
                android:textColor="@color/black_mid"
                android:textCursorDrawable="@null"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_star_border_black_24dp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_volume_down_black_28dp" />


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    app:srcCompat="@drawable/ic_share_black_20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_poesia_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4sp"
                android:text="宋词三百首，豪放，爱国，壮志"
                android:textColor="@color/black_min"
                android:textSize="12sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.v4.widget.NestedScrollView>